package  {		import flash.display.MovieClip;	import flash.events.*;	import flash.display.DisplayObject;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.TimerEvent;	import flash.text.AntiAliasType;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;	import flash.text.TextFormatAlign;		public class specTitle extends MovieClip {				private var _myTitle:String;				public function specTitle(myTitle:String) {			_myTitle = myTitle;						addEventListener(Event.ADDED_TO_STAGE,init);		}				private function init(e:Event):void		{			removeEventListener(Event.ADDED_TO_STAGE,init);						//var fnt: ArialBold = new ArialBold();			var fnt: Font1 = new Font1();			var fmt:TextFormat = new TextFormat();			fmt.font = fnt.fontName;			fmt.color = 0x666666;			fmt.bold = true;			fmt.size = 13;			var text1:TextField =  new TextField();			text1.autoSize = "left";			text1.embedFonts = true;			text1.defaultTextFormat = fmt;			text1.border = false;			text1.width = 180;			text1.multiline = true;			text1.wordWrap = true;			text1.text = _myTitle;			addChild(text1);		}	}	}